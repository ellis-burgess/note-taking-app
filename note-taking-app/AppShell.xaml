<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="note_taking_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:note_taking_app" >

    <FlyoutItem Title="Homepage">
        <ShellContent
        Title="Notes"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    </FlyoutItem>

    <FlyoutItem Title="Add Note">
        <ShellContent
        Title="New Note"
        ContentTemplate="{DataTemplate local:NewNote}" />

    </FlyoutItem>


</Shell>

