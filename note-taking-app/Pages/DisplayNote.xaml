<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="note_taking_app.DisplayNote"
             Title="View Note">

        <ScrollView>

            <VerticalStackLayout
                Padding="30"
                Spacing="15"
                VerticalOptions="Fill" >

                <Border
                    HeightRequest="300">

                <VerticalStackLayout>
                
                <Label
                    x:Name="ThisNoteTitle"
                    Text=""
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    Margin="0,0,0,30" />

                <Label
                    x:Name="ThisNoteContent"
                    Text=""
                    VerticalOptions="Center"
                    FontSize="18"
                    Margin="15,0"/>

                </VerticalStackLayout>

                </Border>

                <Label
                    x:Name="StatusMessage"
                    Text="" />

            </VerticalStackLayout>
    </ScrollView>

</ContentPage>
