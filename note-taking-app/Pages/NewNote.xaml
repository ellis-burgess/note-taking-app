<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="note_taking_app.NewNote"
             Title="New Note">
    <ScrollView>


            <Border>
                <VerticalStackLayout
                    Padding="30"
                    Spacing="15">
                <Border>
                    <Editor
                        x:Name="NoteTitle"
                        Text="New Note"
                        SemanticProperties.HeadingLevel="Level1"
                        FontSize="18"
                        HorizontalOptions="Fill" />

                </Border>
                    <Border>
                        <Editor
                            x:Name="editor"
                            Placeholder="Enter your note here"
                            HeightRequest="200" />

                    </Border>

                    <Button
                        x:Name="SubmitNoteBtn"
                        Text="Submit Note" />


                </VerticalStackLayout>

            </Border>

    </ScrollView>
</ContentPage>
